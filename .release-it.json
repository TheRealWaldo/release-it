{
  "git": {
    "requireCleanWorkingDir": true,
    "tag": false,
    "tagName": "v${version}",
    "commit": true,
    "push": true
  },
  "github": {
    "release": true,
    "releaseName": "Release v${version}",
    "draft": true
  },
  "hooks": {
    "after:bump": "npm run lint-fix && npm run build",
    "after:release": "echo Successfully bumped release to v${version} for ${repo.repository}."
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/bumper": {
      "out": {
        "file": "README.md",
        "type": "text/plain"
      }
    }
  }
}
