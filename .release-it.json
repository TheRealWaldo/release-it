{
  "git": {
    "requireCleanWorkingDir": true,
    "tag": false,
    "tagName": "v${version}",
    "tagAnnotation": "Release v${version}",
    "commit": true,
    "commitMessage": "chore(release): v${version}\n${changelog}",
    "push": true
  },
  "github": {
    "release": true,
    "releaseName": "Release v${version}",
    "draft": false
  },
  "hooks": {
    "after:release": "echo Successfully bumped release to v${version}."
  },
  "npm": false,
  "plugins": {
    "@release-it/bumper": {
      "out": ["README.md", "VERSION"]
    },
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
        "issuePrefixes": ["RIT-"],
        "issueUrlFormat": "https://nowhereradio.atlassian.net/browse/{{prefix}}{{id}}",
        "header": "Release notes",
        "types": [
          { "type": "feat", "section": "Features" },
          { "type": "fix", "section": "Bug Fixes" },
          { "type": "chore", "hidden": true },
          { "type": "docs", "hidden": true },
          { "type": "style", "hidden": true },
          { "type": "refactor", "hidden": true },
          { "type": "perf", "section": "Performance Enhancements" },
          { "type": "test", "hidden": true },
          { "type": "build", "hidden": true },
          { "type": "ci", "hidden": true },
          { "type": "revert", "section": "Reversions" }
        ]
      }
    }
  }
}
